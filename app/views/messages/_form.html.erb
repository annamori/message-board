<%= form_for(@message) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, "名前", class: 'control-label' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :age, "年齢", class: 'control-label' %>
    <%= f.text_field :age, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :body, "内容", class: 'control-label' %>
    <%= f.text_area :body, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit "投稿する", class: 'btn btn-default' %>
  </div>
<% end %>
